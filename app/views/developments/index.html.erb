<% developments = @developments.where(is_development: true) %>
<% developments.each do |development| %>
	<div class="center-block" style="margin-bottom:25px; margin-top:-10px">
		<%= link_to "/developments/#{development[:id]}", {:style=>"text-decoration:none"} do %>
			<% if development.is_sold %>
				<p style="font-family:'Century Gothic',CenturyGothic,AppleGothic,sans-serif; width: 50%; position: relative; margin: auto; font-size: 30px; top: 66px; background-color: black; color: red; opacity:.8">SOLD</p>
			<% end %>
			<% if development.is_in_contract %>
				<p style="font-family:'Century Gothic',CenturyGothic,AppleGothic,sans-serif; width: 50%; position: relative; margin: auto; font-size: 30px; top: 66px; background-color: black; color: red; opacity:.8">In Contract</p>
			<% end %>
			<% if development.is_under_review %>
				<p style="font-family:'Century Gothic',CenturyGothic,AppleGothic,sans-serif; width: 50%; position: relative; margin: auto; font-size: 30px; top: 66px; background-color: black; color: red; opacity:.8">Under Attorney Review</p>
			<% end %>
			<img src="<%= development[:asset2] %>" alt="" style="width:530px; height:315px; max-width:100%; margin-top: -10px">
			<div class="center-block" style="max-width: 100%; display:block; height: auto; border: solid; padding: 10px; width: 750px; margin-left: 100px; opacity: .9; border-color:white; color:black; border-width: 2px; font-size:17px; position:relative; top: -47px; background-color:white">
				<span style="position: absolute; left: 100px">
					<%= development[:address] %> | 
					<%= development[:city] %>, 
					<%= development[:state] %>
				</span>
				<span style="position:relative; left:195px">
					<%= development[:price].to_s.reverse.gsub(/(\d{3})(?=\d)/, '\\1,').reverse.prepend('$') %>
				</span>
			</div>
			<% if current_user && current_user.is_admin %>
				<a href="/developments/<%= development[:id] %>/edit">
					<button class="btn btn-primary" style="margin-top:-80px;">Edit Listing</button>
				</a>
			<% end %>
		<% end %>
	</div>
<% end %>
