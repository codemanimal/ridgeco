	      	<img style="height:400px; width:100%" src="<%= @sale.asset4 %>">
	    	</div>
    	<% end %>
	    <% if @sale.asset5!="" %>
	    	<div class="item">
	      	<img style="height:400px; width:100%" src="<%= @sale.asset5 %>">
	    	</div>
    	<% end %>
	    <% if @sale.asset6!="" %>
	    	<div class="item">
	      	<img style="height:400px; width:100%" src="<%= @sale.asset6 %>">
	    	</div>
    	<% end %>
	    <% if @sale.asset7!="" %>
	    	<div class="item">
	      	<img style="height:400px; width:100%" src="<%= @sale.asset7 %>">
	    	</div>
    	<% end %>
	    <% if @sale.asset8!="" %>
	    	<div class="item">
	      	<img style="height:400px; width:100%" src="<%= @sale.asset8 %>">
	    	</div>
    	<% end %>
	    <% if @sale.asset9!="" %>
	    	<div class="item">
