	</div>
  <!-- Carousel nav -->
  <a class="carousel-control left" href="#myCarousel" role="button" data-slide="prev" style="line-height: 417px; height: 430px; font-size: 46px; padding-right: 56px; margin-top:-47px">&lsaquo;</a>
  <a class="carousel-control right" href="#myCarousel" role="button" data-slide="next" style="line-height: 417px; height: 430px; font-size: 46px; padding-left: 58px; margin-top:-47px">&rsaquo;</a>
</div>

<div class="row text-center" style="max-width: 100%; display:block; height: 140px; margin-top: 15px; margin-left: 1px;">
	<div class="col-xs-6">
		<p style="font-family:Century Gothic,CenturyGothic, AppleGothic,sans-serif; font-size:19px">
			<% broker = @sale.brokers.take %>
			<% if broker %>
			<%= broker.first_name %> 
			<%= broker.last_name %>
		</p>
		<p style="margin-top:10px; font-family:Century Gothic,CenturyGothic, AppleGothic,sans-serif">Representative, Licensed Real Estate Agent <br /> <%= broker.address.titleize %>, <%= broker.city.titleize %>, <%= broker.state.upcase %> <%= broker.zip.titleize %> <br /> C: <%= broker.cell %> &nbsp; O: <%= broker.office %> <br /> E: <%= broker.email %>
		</p>
	</div>
<% end %>
	<div class="col-xs-6">
		<p style="font-family:Century Gothic,CenturyGothic, AppleGothic,sans-serif; font-size:19px">
			<%= @sale.city.capitalize %>, 
			<%= @sale.state.upcase %>
		</p>
		<p style="font-family:Century Gothic,CenturyGothic, AppleGothic,sans-serif">
			Price: <%= @sale.price.to_s.reverse.gsub(/(\d{3})(?=\d)/, '\\1,').reverse.prepend('$') %>
			<br />
			Bedrooms: <%= @sale.bedroom %> | 
			Bathrooms: <%= @sale.bathroom %>
			<br />
			Sqft (approx): <%= @sale.sqft %>
			<br>
			Listing ID: <%= @sale.mls_id %>
		</p>
	</div>
</div>
<hr style="margin-top: 0px">
<div class="row text-center" style="max-width: 100%; display:block; margin-top: 12px; margin-left: 1px; margin-bottom: 100px">
	<p style="margin-top:10px; font-family:Century Gothic,CenturyGothic, AppleGothic,sans-serif; text-align:justify"><%= @sale.description %></p>
</div>

<hr style="margin-top: -50px">
<div class="text-center" style="max-width: 100%; display:block; margin-top: 12px; margin-left: 1px; margin-bottom: 50px;">
	<p style="margin-top:10px; font-family:Century Gothic,CenturyGothic, AppleGothic,sans-serif; text-align:center">
		<% if @sale.asset1 %>
			<a target="_blank" href="<%= @sale.asset1 %>">Click here for a video of the property</a>
		<% end %>
	</p>
</div>