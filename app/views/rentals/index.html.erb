<% rentals = @rentals.where(is_rental: true) %>
<% rentals.each do |rental| %>
	<div class="center-block" style="margin-bottom:25px; margin-top:-10px">
		<%= link_to "/rentals/#{rental[:id]}", {:style=>"text-decoration:none"} do %>
			<img src="<%= rental[:asset2] %>" alt="" style="width:530px; height:315px; max-width:100%; margin-top: -10px">
			<% if rental.is_sold? %>
				<p style=" width: 50%; position: relative; margin: auto; font-size: 40px; top: 66px; background-color: black; color: red; opacity:.8">SOLD</p>
			<% end %>
			<% if rental.is_in_contract? %>
				<p style=" width: 50%; position: relative; margin: auto; font-size: 40px; top: 66px; background-color: black; color: red; opacity:.8">In Contract</p>
			<% end %>
			<% if rental.is_under_review? %>
				<p style=" width: 50%; position: relative; margin: auto; font-size: 40px; top: 66px; background-color: black; color: red; opacity:.8">Under Attorney Review</p>
			<% end %>
			<div class="center-block" style="max-width: 100%; display:block; height: auto; border: solid; padding: 10px; width: 750px; margin-left: 100px; opacity: .9; border-color:white; color:black; border-width: 2px; font-size:17px; position:relative; top: -47px; background-color:white">
				<span style="position: absolute; left: 100px">
					<%= rental[:address] %> | 
					<%= rental[:city] %>, 
					<%= rental[:state] %>
				</span>
				<span style="position:relative; left:195px">
					<%= rental[:price].to_s.reverse.gsub(/(\d{3})(?=\d)/, '\\1,').reverse.prepend('$') %>
				</span>					
			</div>
			<% if current_user && current_user.is_admin %>
				<a href="/rentals/<%= rental[:id] %>/edit">
					<button class="btn btn-primary" style="margin-top:-80px;">Edit Listing</button>
				</a>
			<% end %>
		<% end %>
	</div>
<% end %>